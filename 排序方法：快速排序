def partition(Lis,left,right):
    tmp = Lis[left]
    while left < right:
        while left < right and Lis[right] >= tmp:
            right -= 1
        Lis[left] = Lis[right]
        while right > left and Lis[left] <= tmp:
            left += 1
        Lis[right] = Lis[left]
    Lis[left] = tmp #这一步非常重要，务必记住！
    return left
def quick_sort(Lis,left,right):
    if left < right: #这一步同样重要，务必记住！
        mid = partition(Lis,left,right)
        quick_sort(Lis,left,mid-1)
        quick_sort(Lis,mid+1,right)

from random import  randint
Lis1 = [randint(1,100) for i in range(9)]
print(Lis1)
quick_sort(Lis1,0,len(Lis1)-1)
print(Lis1)
